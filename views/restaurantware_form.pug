extends layout

block content
  h1= title
  form(method="post")
    div.form-group
      label(for="name") Name:
      input#name.form-control(type="text", name="name", value=(restaurantware && restaurantware.name) ? restaurantware.name : '')
    div.form-group
      label(for="type") Type:
      select#type.form-control(name="type")
        each type in types
          option(value=type, selected=(restaurantware && restaurantware.type === type))= type
      div Or
      input#new_type.form-control(type="text", name="new_type", placeholder="New Type")
    div.form-group
      label(for="cost") Cost:
      input#cost.form-control(type="text", name="cost", value=(restaurantware && restaurantware.cost) ? restaurantware.cost : '')
    div.form-group
      label(for="stock") Stock:
      input#stock.form-control(type="text", name="stock", value=(restaurantware && restaurantware.stock) ? restaurantware.stock : '')
    div.form-group
      label(for="critical") Critical:
      input#critical.form-control(type="text", name="critical", value=(restaurantware && restaurantware.critical) ? restaurantware.critical : '')
    div.form-group
      label(for="supplier") Supplier:
      select#supplier.form-control(name="supplier")
        each supplier in suppliers
          option(value=supplier._id, selected=(restaurantware && restaurantware.supplier && supplier._id.toString() === restaurantware.supplier._id.toString()))= supplier.name
    button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      for error in errors
        li!= error.msg
