extends layout

block content
  h1 Restaurant Ware Detail
  p Name: #{restaurantware.name}
  p Type: #{restaurantware.type}
  p Cost: #{restaurantware.cost}
  p Stock: #{restaurantware.stock}
  p Critical: #{restaurantware.critical}
  p Supplier: #{restaurantware.supplier.name}

  hr
  p
    a.btn.btn-primary(href=restaurantware.url+'/update') Update Restaurant Ware
    a.btn.btn-danger(href=restaurantware.url+'/delete') Delete Restaurant Ware